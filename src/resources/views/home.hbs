<div class="posts">
    <h2 class="text-[20px] font-bold">Bài viết nổi bật</h2>
    <div class="grid mt-3 grid-cols-4 gap-4">
        {{#each posts}}
        <div class="post rounded-[10px] h-[250px] overflow-hidden bg-slate-100 hover:translate-y-[-10px] hover:shadow">
            <div class="image h-[60%] w-[100%] overflow-hidden">
                <img src="{{this.thumb}}" alt="">
            </div>
            <div class="h-[40%] p-3 flex flex-col justify-between">
                <a href="#" class="font-bold text-[16px]">{{this.title}}</a>
                <a href="" class="flex gap-2 items-center">
                    <img class="avatar w-[18px] h-[18px]" src="{{this.avatar}}" alt="">
                    <span class="font-bold text-[14px]">{{this.author}}</span>
                    <i class="fa-solid fa-circle-check text-blue-600 text-[12px]"></i>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</div>